#!/usr/bin/env bash
#
# jasondemo2 - Start AAR Admin demo environment
# Starts Django, FastAPI servers and opens browser with admin role
#
# Usage: ./jasondemo2
# To stop: ./jasondemo2_end
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Project paths
PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
DJANGO_DIR="$PROJECT_ROOT/django"
FASTAPI_DIR="$PROJECT_ROOT/fastapi"

# Process IDs file
PID_FILE="/tmp/jasondemo2_pids.txt"

# URLs
DJANGO_URL="http://localhost:8000"
FASTAPI_URL="http://localhost:9223"

# Log files
FASTAPI_LOG="/tmp/jasondemo2_fastapi.log"
DJANGO_LOG="/tmp/jasondemo2_django.log"

cleanup() {
    echo -e "\n${YELLOW}Interrupted. Run './jasondemo2_end' to stop servers.${NC}"
    exit 0
}

trap cleanup SIGINT SIGTERM

echo -e "${GREEN}=== Starting AAR Admin Demo (jasondemo2) ===${NC}"

# Function to check if a port is in use
check_port() {
    lsof -i:"$1" > /dev/null 2>&1
}

# Function to wait for service to be ready
wait_for_service() {
    local url=$1
    local name=$2
    local max_attempts=30
    local attempt=1
    
    echo -n "Waiting for $name to be ready..."
    while [ $attempt -le $max_attempts ]; do
        if curl -s "$url/healthCheck" > /dev/null 2>&1 || curl -s "$url" > /dev/null 2>&1; then
            echo -e " ${GREEN}Ready!${NC}"
            return 0
        fi
        echo -n "."
        sleep 1
        attempt=$((attempt + 1))
    done
    echo -e " ${RED}Failed!${NC}"
    return 1
}

# Check prerequisites
echo -e "\n${YELLOW}Checking prerequisites...${NC}"

# Check Python
if ! command -v python3 &> /dev/null; then
    echo -e "${RED}Error: Python 3 is required but not installed.${NC}"
    exit 1
fi

# Install dependencies if needed
echo -e "\n${YELLOW}Installing dependencies...${NC}"

# Install FastAPI dependencies
cd "$FASTAPI_DIR"
if [ -f "pyproject.toml" ]; then
    echo "Installing FastAPI dependencies..."
    python3 -m pip install -e . 2>/dev/null || python3 -m pip install fastapi aiosqlite pydantic uvicorn
fi

# Install Django dependencies
cd "$DJANGO_DIR"
if [ -f "pyproject.toml" ]; then
    echo "Installing Django dependencies..."
    python3 -m pip install -e . 2>/dev/null || python3 -m pip install Django httpx gunicorn
fi

# Check if uv is available (for FastAPI)
if ! command -v uv &> /dev/null; then
    echo -e "${YELLOW}Warning: 'uv' not found. Installing...${NC}"
    python3 -m pip install uv
fi

# Check if playwright is available for browser automation
if ! python3 -c "import playwright" 2>/dev/null; then
    echo -e "${YELLOW}Warning: 'playwright' not found. Installing...${NC}"
    python3 -m pip install playwright
    playwright install chromium
fi

# Kill any existing processes from previous sessions
if [ -f "$PID_FILE" ]; then
    echo -e "${YELLOW}Cleaning up previous session...${NC}"
    while read pid; do
        if kill -0 "$pid" 2>/dev/null; then
            kill "$pid" 2>/dev/null || true
        fi
    done < "$PID_FILE"
    rm -f "$PID_FILE"
fi

# Also check for processes on our ports
if lsof -ti:8000 >/dev/null 2>&1; then
    echo -e "${YELLOW}Warning: Something running on port 8000. Attempting to kill...${NC}"
    lsof -ti:8000 | xargs kill -9 2>/dev/null || true
    sleep 1
fi

if lsof -ti:9223 >/dev/null 2>&1; then
    echo -e "${YELLOW}Warning: Something running on port 9223. Attempting to kill...${NC}"
    lsof -ti:9223 | xargs kill -9 2>/dev/null || true
    sleep 1
fi

# Clear PID file
> "$PID_FILE"

# Start FastAPI server
echo -e "\n${YELLOW}Starting FastAPI server on port 9223...${NC}"
cd "$FASTAPI_DIR"
export AAR_ENV=${AAR_ENV:-local}
nohup python3 -m uvicorn app.main:app --host 0.0.0.0 --port 9223 > "$FASTAPI_LOG" 2>&1 &
FASTAPI_PID=$!
echo "$FASTAPI_PID" >> "$PID_FILE"
echo "FastAPI started (PID: $FASTAPI_PID)"

# Start Django server
echo -e "\n${YELLOW}Starting Django server on port 8000...${NC}"
cd "$DJANGO_DIR/app"
export DJANGO_SETTINGS_MODULE=aar_admin.settings_local
# Run migrations first
python3 manage.py migrate --noinput > /tmp/jasondemo2_django_migrate.log 2>&1 || true
nohup python3 manage.py runserver 0.0.0.0:8000 > "$DJANGO_LOG" 2>&1 &
DJANGO_PID=$!
echo "$DJANGO_PID" >> "$PID_FILE"
echo "Django started (PID: $DJANGO_PID)"

# Wait for services to be ready
echo -e "\n${YELLOW}Waiting for services to start...${NC}"
wait_for_service "$FASTAPI_URL" "FastAPI"
wait_for_service "$DJANGO_URL" "Django"

# Open browser to the main page
echo -e "\n${YELLOW}Opening browser...${NC}"

# Use macOS open command to launch browser
open "http://localhost:8000/"

echo -e "\n${GREEN}=== Demo environment is ready! ===${NC}"
echo "Django: http://localhost:8000"
echo "FastAPI: http://localhost:9223"
echo ""
echo "To set ADMIN_USER role:"
echo "  1. Click the user avatar (top right)"
echo "  2. Select 'ADMIN_USER'"
echo ""
echo "Press Ctrl+C in this terminal to stop the servers,"
echo "or run './jasondemo2_end' in another terminal."

# Keep script running
while true; do
    sleep 5
    # Check if servers are still running
    if ! kill -0 "$DJANGO_PID" 2>/dev/null || ! kill -0 "$FASTAPI_PID" 2>/dev/null; then
        echo -e "\n${YELLOW}One or more servers stopped. Exiting...${NC}"
        break
    fi
done
